# Please see man i3blocks for a complete reference!
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
# Change $SCRIPT_DIR to the location of your scripts!
command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

# The battery instance defaults to 0.
[battery]
label=ðŸ”‹
#instance=1
interval=1
#color=#9ee3e5

[lightness]
label=ðŸ’¡
command=xbacklight -get | awk -F '.' '{print $1}'
interval=1
color=#9ee3e5

[volume]
label=ðŸ”Š
instance=Master
#instance=PCM
interval=1
#command=/usr/share/i3blocks/volume
#command=[ `/usr/share/i3blocks/volume` = 0% ] && color='#6e7177' || color='#439ad3' && /usr/share/i3blocks/volume && echo -e "\n${color}"
command=[ `/usr/share/i3blocks/volume` = 0% ] && color='#439ad3' || color='#6e7177' && /usr/share/i3blocks/volume && echo -e "\n${color}"

# The type defaults to "mem" if the instance is not specified.
[memory]
label=Mem
separator=false
interval=1
command=free -h | awk 'match($0, /^Mem/){print $3 "/" $2}'
color=#9ee3e5

[memory]
separator=false
interval=1
color=#9ee3e5

[memory]
label=Swap
instance=swap
separator=false
interval=1
color=#9ee3e5

# The directory defaults to $HOME if the instance is not specified.
# The script may be called with a optional argument to set the alert
# (defaults to 10 for 10%).
[disk]
label=df
#DIR=/mnt/data
interval=1
color=#9ee3e5

#[network]
[ssid]
label=SSID
command=[[ $(iw dev wlp59s0 link) != 'Not connected.' ]] && echo "$(iw dev wlp59s0 link | sed '/SSID/!d;s/ //g;s/[^:]*://')/-$(iw dev wlp59s0 link | grep signal | grep -o '[0-9]*')dBm"
interval=1
color=#9ee3e5

# If the instance is not specified, use the interface used for default route.
# The address can be forced to IPv4 or IPv6 with -4 or -6 switches.
[iface]
instance=wlp59s0
color=#00FF00
interval=1
separator=false

[wifi]
instance=wlp59s0
interval=1
separator=false

[bandwidth]
#instance=eth0
instance=wlp59s0
interval=1
color=#9ee3e5

[load average]
label=LA
command=echo "$(uptime | sed 's/.*load average: \(.*\)/\1/' | cut -d, -f1)/$(cat /proc/cpuinfo | grep processor | wc -l)"
interval=1
color=#9ee3e5

# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[cpu_usage]
label=CPU
interval=10
min_width=CPU 100.00%
separator=false
color=#9ee3e5

# Support multiple chips, though lm-sensors.
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[temperature]
label=TEMP
interval=1
command=./i3blocks-contrib/temperature/temperature
#color=#8caba8
color=#dcedc1
separator=true

[time]
command=date '+%Y-%m(%b)-%d(%a)%H:%M:%S'
interval=1

