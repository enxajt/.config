command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none


[worldClock]
command=$HOME/script/clock.sh
interval=1
color=#c0c5ce


# wifi network

[bandwidth]
#instance=eth0
instance=wlp2s0
interval=1
color=#a3be8c

[iface]
instance=wlp2s0
interval=1
color=#a3be8c
separator=false

[essid]
command=iwconfig wlp2s0 2> /dev/null | grep ESSID | awk -F\" '{print $2}' | tr -d " \t"
interval=1
color=#a3be8c
separator=false

# Support multiple VPN, with colors.
#[openvpn]
#interval=20


[lightness]
label=ðŸ’¡
command=xbacklight -get | awk -F '.' '{print $1}'
interval=1
color=#c0c5ce

[volume]
instance=Master
interval=1
command=$HOME/script/audio-get-vol.sh;
markup=pango

[bluetooth]
interval=1
command=$HOME/script/bluetooth.sh;
markup=pango

[battery]
label=ðŸ”‹
interval=1
color=#c0c5ce
separator=true

[load average]
label=LA
command=echo "$(uptime | sed 's/.*load average: \(.*\)/\1/' | cut -d, -f1)/$(cat /proc/cpuinfo | grep processor | wc -l)"
interval=1
color=#ef919a

[cpu_usage]
label=CPU
interval=1
separator=true
color=#ef919a
