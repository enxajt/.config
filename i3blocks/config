command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

[battery]
label=ðŸ”‹
interval=1

[lightness]
label=ðŸ’¡
command=xbacklight -get | awk -F '.' '{print $1}'
interval=1
color=#9ee3e5

[volume]
color=#00FF00
label=ðŸ”Š
instance=Master
interval=1
command=[ `/usr/share/i3blocks/volume` = 0% ] && color='#a5eeb7' || color='#6e7177' && /usr/share/i3blocks/volume && echo -e "\n${color}"

[load average]
label=LA
command=echo "$(uptime | sed 's/.*load average: \(.*\)/\1/' | cut -d, -f1)/$(cat /proc/cpuinfo | grep processor | wc -l)"
interval=1
color=#9ee3e5

[cpu_usage]
label=CPU
interval=10
min_width=CPU 100.00%
separator=true
color=#9ee3e5

# Support multiple chips, though lm-sensors.
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
#[temperature]
#label=TEMP
#interval=1
#command=./i3blocks-contrib/temperature/temperature
#separator=true
#T_WARN=70
#T_CRIT=90
#SENSOR_CHIP=""

[memory]
label=Mem
separator=false
interval=1
command=free -h | awk 'match($0, /^Mem/){print $3 "/" $2}'
color=#9ee3e5

[swap]
label=swap
instance=swap
separator=false
interval=1
color=#9ee3e5

# The directory defaults to $HOME if the instance is not specified.
# The script may be called with a optional argument to set the alert
# (defaults to 10 for 10%).
[disk]
label=df
#DIR=/mnt/data
interval=1
color=#9ee3e5

[iface]
instance=wlp59s0
interval=1
separator=false

[essid]
command=iwconfig wlp59s0 2> /dev/null | grep ESSID | awk -F\" '{print $2}'
interval=1
color=#00FF00
separator=false

[bandwidth]
#instance=eth0
instance=wlp59s0
interval=1
color=#9ee3e5

# Support multiple VPN, with colors.
#[openvpn]
#interval=20

[time]
command=date '+%Y-%m(%b)-%d(%a)%H:%M:%S'
interval=1

